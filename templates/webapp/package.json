{
  "devDependencies": {
    "@types/deno": "^2.3.0",
    "purescript": "^0.15.15",
    "spago": "^0.93.44",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:purs",
    "build:purs": "spago build",
    "build:ts": "tsc -p purs.tsconfig.json",
    "serve": "deno run --allow-net --allow-read=html,db --allow-write=db serve.ts",
    "test": "deno run --allow-all test.ts"
  }
}
